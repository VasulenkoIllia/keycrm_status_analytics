AUTH_USER=admin
AUTH_PASS=admin
JWT_SECRET=change_me_jwt_secret
PORT=4000
LOG_LEVEL=info

# Публічний базовий URL бекенду (для автогенерації webhook_url, опційно)
PUBLIC_BASE_URL=https://orderstatus.workflo.space

# Опційно: глобальний токен KeyCRM, якщо не задаєш per-project в UI
KEYCRM_API_TOKEN=YOUR_KEYCRM_API_TOKEN
# Базовий URL KeyCRM API
KEYCRM_BASE_URL=https://openapi.keycrm.app/v1

# Токен для вебхука (query ?token= або header x-webhook-token)
WEBHOOK_TOKEN=
# Дозволити порожній токен вебхука (краще false на проді)
ALLOW_EMPTY_WEBHOOK_TOKEN=false

# Postgres
PGHOST=localhost
PGPORT=5432
PGUSER=keycrm
PGPASSWORD=keycrm
PGDATABASE=keycrm

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=

# Frontend (Vite)
VITE_API_BASE=http://localhost:4000
VITE_API_TOKEN=
