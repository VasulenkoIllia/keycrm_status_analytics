# .env (production)

NODE_ENV=production
PORT=4000
LOG_LEVEL=info

# JWT для сесій (обов'язково змінити)
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET

# Публічний базовий URL бекенду
PUBLIC_BASE_URL=https://orderstatus.workflo.space

# Опційно: глобальний токен KeyCRM
KEYCRM_API_TOKEN=
KEYCRM_BASE_URL=https://openapi.keycrm.app/v1

# Вебхук
WEBHOOK_TOKEN=CHANGE_ME_WEBHOOK_TOKEN
ALLOW_EMPTY_WEBHOOK_TOKEN=false

# Postgres (docker)
PGHOST=db
PGPORT=5432
PGUSER=keycrm
PGPASSWORD=CHANGE_ME_DB_PASSWORD
PGDATABASE=keycrm

# Redis
REDIS_URL=redis://redis:6379

# Первинний супер-адмін
SEED_SUPERADMIN_LOGIN=superadmin
SEED_SUPERADMIN_PASS=CHANGE_ME_ADMIN_PASSWORD

# CORS allowlist (prod)
CORS_ORIGINS=https://orderstatus.workflo.space
