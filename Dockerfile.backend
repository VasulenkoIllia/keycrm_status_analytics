FROM node:20-alpine

WORKDIR /app

COPY server/package*.json ./server/

RUN apk add --no-cache postgresql-client \
  && cd server && npm ci --only=production

COPY server ./server
COPY scripts ./scripts
COPY db ./db

ENV NODE_ENV=production
ENV TZ=Europe/Kyiv

EXPOSE 4000

CMD ["node", "server/src/index.js"]
