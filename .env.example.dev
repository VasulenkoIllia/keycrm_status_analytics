# .env (development)

NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# JWT для сесій
JWT_SECRET=dev_secret_change_me

# Публічний базовий URL бекенду (для автогенерації webhook_url, опційно)
PUBLIC_BASE_URL=http://localhost:4000

# Опційно: глобальний токен KeyCRM
KEYCRM_API_TOKEN=
KEYCRM_BASE_URL=https://openapi.keycrm.app/v1

# Вебхук
WEBHOOK_TOKEN=CHANGE_ME_WEBHOOK_TOKEN
ALLOW_EMPTY_WEBHOOK_TOKEN=true

# Postgres (локально або docker)
PGHOST=localhost
PGPORT=5432
PGUSER=keycrm
PGPASSWORD=keycrm
PGDATABASE=keycrm

# Redis
REDIS_URL=redis://localhost:6379

# Первинний супер-адмін
SEED_SUPERADMIN_LOGIN=admin
SEED_SUPERADMIN_PASS=admin

# CORS allowlist (dev)
CORS_ORIGINS=http://localhost:5173

# Frontend (Vite)
# VITE_API_BASE=  # залиш пустим, щоб використовувати Vite proxy /api
